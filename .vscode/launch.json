{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "hlcc check",
            "type": "pwa-node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/lib-umd/index.js",
            "args": [
                "check",
                "${relativeFile}"
            ],
            "outFiles": [
                "${workspaceFolder}/lib-umd/**/*.js"
            ]
        },
        {
            "name": "hlcc compile",
            "type": "pwa-node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/lib-umd/index.js",
            "args": [
                "compile",
                "${relativeFile}"
            ],
            "outFiles": [
                "${workspaceFolder}/lib-umd/**/*.js"
            ]
        },
        {
            "name": "hlcc run",
            "type": "pwa-node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--no-warnings"
            ],
            "program": "${workspaceFolder}/lib-umd/index.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "run",
                "${relativeFile}"
            ],
            "outFiles": [
                "${workspaceFolder}/lib-umd/**/*.js"
            ]
        },
        {
            "name": "hlcc execute",
            "type": "pwa-node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/out-js/samples/simple.js",
            "outFiles": [
                "${workspaceFolder}/lib-umd/**/*.js"
            ]
        },
        {
            "name": "hlcc test",
            "type": "pwa-node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/lib-umd/index.js",
            "args": [
                "test",
                "${relativeFile}"
            ],
            "outFiles": [
                "${workspaceFolder}/lib-umd/**/*.js"
            ]
        },
        {
            "name": "gen data",
            "type": "pwa-node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/lib-umd/__tests__/genData.js",
            "args": [],
            "outFiles": [
                "${workspaceFolder}/lib-umd/**/*.js"
            ]
        },
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            // path to VSCode executable
            "runtimeExecutable": "${execPath}",
            "args": [
                "--disable-extensions",
                "--extensionDevelopmentPath=${workspaceRoot}",
                "--enable-proposed-api",
                "${workspaceFolder}/tutorial"
            ],
            "outFiles": [
                "${workspaceRoot}/lib-umd/*.js"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Tests",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--reporter",
                "dot",
                "--slow",
                "5000",
                "--colors",
                "${workspaceFolder}/lib-umd/__tests__/index.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}